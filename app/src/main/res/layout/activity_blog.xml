<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="example.com.finance.blog"
    android:background="@drawable/blue">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Your Blog Here!"
                android:id="@+id/textView"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="normal|bold|italic"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:fontFamily="casual"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/email"
                android:layout_alignStart="@+id/email" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textPersonName"
                android:ems="10"
                android:layout_below="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="62dp"
                android:id="@+id/topic"
                android:hint="Enter Blog Topic:"
                android:textColorHint="@color/colorPrimary"
                android:background="@drawable/rounded"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailSubject|textPersonName"
                android:ems="10"
                android:layout_marginTop="16dp"
                android:id="@+id/subject"
                android:layout_below="@+id/topic"
                android:layout_alignLeft="@+id/topic"
                android:layout_alignStart="@+id/topic"
                android:hint="Enter Subject:"
                android:background="@drawable/rounded"
                android:textColorHint="@color/colorPrimary"
                android:textColor="@color/colorPrimary" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:layout_below="@+id/subject"
                android:layout_alignLeft="@+id/subject"
                android:layout_alignStart="@+id/subject"
                android:layout_marginTop="11dp"
                android:id="@+id/blogn"
                android:hint="Enter Blog name:"
                android:textColorHint="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:layout_alignRight="@+id/subject"
                android:layout_alignEnd="@+id/subject"
                android:background="@drawable/rounded" />


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/email"
                android:layout_below="@+id/textView"
                android:layout_alignLeft="@+id/topic"
                android:layout_alignStart="@+id/topic"
                android:layout_marginTop="17dp"
                android:hint="Emailid:"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:background="@drawable/rounded"
                android:selectAllOnFocus="true"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <Button
                android:text="UPLOAD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/submit"
                android:layout_marginTop="64dp"
                android:layout_below="@+id/article"
                android:layout_alignLeft="@+id/article"
                android:layout_alignStart="@+id/article"
                android:textColor="@color/colorAccent"
                android:background="@color/colorPrimaryLight"
                android:textStyle="normal|bold|italic"
                android:textSize="24sp"
                android:drawableLeft="@android:drawable/stat_sys_upload"
                android:layout_alignRight="@+id/subject"
                android:layout_alignEnd="@+id/subject" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/article"
                android:hint="Enter Article:"
                android:textColorHint="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/blogn"
                android:layout_alignLeft="@+id/blogn"
                android:layout_alignStart="@+id/blogn"
                android:layout_marginTop="5sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>
