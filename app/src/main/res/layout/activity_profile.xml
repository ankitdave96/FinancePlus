<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="example.com.finance.profile"
    android:background="@color/colorPrimaryLight">

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="450dp"
        android:layout_width="350dp"
        android:background="@drawable/rounded"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:textSize="18sp"
                android:textColor="@color/button_grey"
                android:textStyle="normal|bold"
                android:allowUndo="true"
                android:background="@drawable/rounded"
                android:layout_marginLeft="5sp"
                android:textAlignment="center" />

            <Button
                android:text="Upload Blog"
                android:layout_width="221dp"
                android:layout_height="wrap_content"
                android:id="@+id/upload"
                android:elevation="0dp"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:background="@color/white"
                android:padding="10sp"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="12dp"
                android:layout_above="@+id/logout"
                android:layout_alignLeft="@+id/email"
                android:layout_alignStart="@+id/email"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:focusableInTouchMode="true" />

            <Button
                android:text="View Blogs"
                android:layout_height="wrap_content"
                android:id="@+id/view"
                android:layout_width="265dp"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:background="@color/white"
                android:padding="10sp"
                android:textColor="@color/colorAccent"
                android:layout_alignBottom="@+id/upload"
                android:layout_alignLeft="@+id/upload"
                android:layout_alignStart="@+id/upload"
                android:layout_marginBottom="53dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:focusableInTouchMode="true" />

            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@drawable/ic_person_outline_black_24dp"
                android:id="@+id/imageView2"
                android:cropToPadding="false"
                android:adjustViewBounds="false"
                android:layout_above="@+id/news"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="17dp"
                android:layout_height="90dp" />

            <Button
                android:text="Log Out"
                android:layout_height="wrap_content"
                android:id="@+id/logout"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:background="@color/colorPrimaryLight"
                android:textColor="@color/colorAccent"
                android:fontFamily="sans-serif"
                android:layout_width="match_parent"
                android:layout_marginBottom="11dp"
                android:layout_alignParentBottom="true"
                android:cursorVisible="true"
                android:focusableInTouchMode="true"
                android:layout_alignLeft="@+id/upload"
                android:layout_alignStart="@+id/upload" />

            <Button
                android:text="Financial Calculators"
                android:layout_height="wrap_content"
                android:id="@+id/calc"
                android:layout_width="265dp"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:background="@color/white"
                android:padding="10sp"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="13dp"
                android:layout_above="@+id/view"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:focusableInTouchMode="true" />

            <Button
                android:text="Financial News"
                android:layout_height="wrap_content"
                android:id="@+id/news"
                android:layout_width="265dp"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:background="@color/white"
                android:padding="10sp"
                android:textColor="@color/colorAccent"
                android:layout_above="@+id/calc"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"
                android:layout_alignLeft="@+id/view"
                android:layout_alignStart="@+id/view"
                android:focusableInTouchMode="true" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>