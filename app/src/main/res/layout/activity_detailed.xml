<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryLight">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="166dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_height="match_parent"
                app:srcCompat="@drawable/blog"
                android:id="@+id/det_image"
                android:layout_width="match_parent"
                android:cropToPadding="true"
                android:adjustViewBounds="false"
                android:layout_marginTop="10sp" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="TOPIC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:id="@+id/det_topic"
            android:textColor="@color/colorPrimary"
            android:padding="5sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:paddingTop="5sp">

            <TextView
                android:text="Written By :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:textStyle="italic"

                android:id="@+id/noonecarres"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1.11"
                android:textSize="18sp" />

            <TextView
                android:text="blogger_name"
                android:layout_width="183dp"
                android:layout_height="match_parent"
                android:textAlignment="viewStart"

                android:id="@+id/det_by"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="normal|bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5sp">

            <TextView
                android:text="Subject :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="viewEnd" />

            <TextView
                android:text="Subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:textSize="18sp"

                android:id="@+id/det_sub"
                android:textColor="@color/colorPrimary"
                android:textStyle="normal|bold"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:text="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textSize="18sp"

            android:id="@+id/det_maintext"
            android:textColor="@color/colorPrimary"
            android:padding="5sp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/like"
            android:stepSize="0.5"
            android:isIndicator="false"
            style="@android:style/Widget.Holo.Light.RatingBar"
            android:numStars="5"
            android:focusable="true"
            android:outlineProvider="bounds"
            android:progressBackgroundTint="@color/colorPrimary"
            android:progressBackgroundTintMode="src_atop"
            android:layout_marginTop="20dp" />

    </LinearLayout>
        </ScrollView>
        </LinearLayout>
</LinearLayout>
