
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:bottom="1dp"
            android:left="-2dp"
            android:right="-2dp"
            android:top="-2dp">
            <shape android:shape="rectangle">
                <solid android:color="#ffffff"/>
                <stroke
                    android:width="1dp"
                    android:color="#3bbdfa"
                    />
                <padding
                    android:bottom="5dp"
                    android:left="2dp"
                    android:right="5dp"
                    android:top="5dp" />
            </shape>
        </item>
    </selector>

